# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://127.0.0.1:8000/callback
LINKEDIN_SCOPES=openid profile email w_member_social
LINKEDIN_REST_VERSION=202409
LINKEDIN_REST_VERSION_FALLBACKS=202407,202405

# Google Gemini Configuration
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_FALLBACK_MODELS=gemini-1.5-flash-8b,gemini-1.0-pro
GEMINI_MAX_OUTPUT_TOKENS=4096
GEMINI_RETRY_STEP=600

# Timezone and Scheduling
TZ=Europe/Istanbul
POST_WINDOWS=weekday:09:30-11:00,17:30-19:30
OPERATING_HOURS_START=7
OPERATING_HOURS_END=22

# Posting Configuration
DAILY_POSTS=1
MAX_DAILY_PROACTIVE=9
DRY_RUN=true
RARE_EMOJI=true

# Content Moderation
BLOCK_POLITICS=true
BLOCK_SPECULATIVE_CRYPTO=true
REQUIRE_APPROVAL_SENSITIVE=true

# Persona Configuration
PERSONA_NAME=Kürşat
PERSONA_AGE=21
PERSONA_ROLE=Product Builder

# Flask Configuration
FLASK_SECRET_KEY=change-this-in-production

# Personalization & Interests
INTERESTS=ai,llm,product,saas,startup,founder,ux,devtools,infra
ABOUT_ME_PATH=./data/about_me.md
POST_STYLE_FILE=./data/style.md
COMMENT_STYLE_FILE=./data/style_comment.md
AB_TESTING=true
MAX_POST_LENGTH=1200

# Invites & retries
INVITES_ENABLED=false
INVITES_MAX_PER_DAY=2
INVITES_BATCH_SIZE=1
FAILED_ACTIONS_ENABLED=true
FAILED_ACTIONS_MAX_RETRIES=4
FAILED_ACTION_RETRY_BASE_SECONDS=60
